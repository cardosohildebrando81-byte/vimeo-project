# Configurações do Ambiente de Desenvolvimento
NODE_ENV=development

# URL da API (ajuste conforme necessário)
VITE_API_URL=http://localhost:3000/api

# URL base da aplicação
VITE_APP_URL=http://localhost:8080

# Configurações de autenticação (se necessário)
# VITE_AUTH_SECRET=your-secret-key-here

# Configurações de banco de dados (se necessário)
# DATABASE_URL=your-database-url-here

# Configurações do Vimeo API
VITE_VIMEO_ACCESS_TOKEN=your-vimeo-access-token-here
VITE_VIMEO_CLIENT_ID=your-vimeo-client-id-here
VITE_VIMEO_CLIENT_SECRET=your-vimeo-client-secret-here
VITE_VIMEO_API_URL=https://api.vimeo.com
# Flags de performance para evitar travamentos (valores seguros por padrão)
VITE_VIMEO_FALLBACK_ENABLED=false
VITE_VIMEO_MAX_PAGES=8
VITE_VIMEO_BATCH_SIZE=1
VITE_VIMEO_VIDEOS_PER_REQUEST=50

# Configurações do Supabase (Frontend)
VITE_SUPABASE_URL="https://<your-project-ref>.supabase.co"
VITE_SUPABASE_ANON_KEY="<your-anon-key>"
# Bucket de avatars no Storage (padrão 'avatars')
VITE_SUPABASE_AVATAR_BUCKET=avatars
# Organização padrão (opcional, usada para sincronizar public.User)
VITE_DEFAULT_ORGANIZATION_ID="<org-id-optional>"
# Sincronização cliente -> banco do usuário (mantenha false para evitar tarefas pesadas no login)
VITE_SYNC_USER_CLIENT_SIDE=false

# Configurações de terceiros (exemplos)
# VITE_GOOGLE_ANALYTICS_ID=your-ga-id
# VITE_STRIPE_PUBLIC_KEY=your-stripe-public-key

# Configurações de debug
VITE_DEBUG=true

# Porta do servidor de desenvolvimento (já configurada no vite.config.ts)
PORT=8080